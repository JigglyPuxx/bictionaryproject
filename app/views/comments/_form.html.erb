<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<h5>Username</h5>
		<!-- <%= f.label :username %><br> -->
		<%= f.text_field(:username, {:class => 'form-control'})%>
	</p>

	<p>
		<h5>Comment Here</h5>
		<!-- <%= f.label :body %><br> -->
		<%= f.text_area(:body, {:class => 'form-control'})%>
	</p>
	
	<p>
		<%= f.submit({:class => 'btn btn-default'}) %>
	</p>

<% end %>